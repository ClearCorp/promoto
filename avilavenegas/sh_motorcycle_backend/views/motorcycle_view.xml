<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- menuitem -->
	<!-- Motorcycle menuitem root -->
    <menuitem id="sh_motorcycle_menuitem_root"
    	sequence="1"
    	name="Motorcycle"
    	groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"    	
     />	

    <menuitem id="sh_motorcycle_menuitem_config"
    	sequence="2"
    	name="Configurations"
    	parent="sh_motorcycle_menuitem_root"
    	groups="sh_motorcycle_backend.group_sh_motorcycle_manager"        	
     />		
	<!-- form view -->
	<record id="sh_motorcycle_motorcycle_form" model="ir.ui.view">
		<field name="name">sh.motorcycle.motorcycle</field>
		<field name="model">motorcycle.motorcycle</field>
		<field name="arch" type="xml">
		<form string="Motorcycle">
			<sheet>
				<sheet>
				
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Motorcycle Name"/>
                            </h1>
                        </div>				
				
					<group>
						<group>
							<field name="mmodel_id"/>
							<field name="year_id"/>							
						</group>
						<group>
							<field name="type_id"/>
							<field name="make_id"/>

						</group>				
					</group>
					
					<field name="product_ids">
						<tree editable="bottom">						
		                    <field name="default_code"/>
		                    <field name="name"/>			                    
		                    <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
		                    <field name="lst_price"/>
 						    <field name="virtual_available"/>		                    
						</tree>
						 
					</field>

				
					
				</sheet>
			</sheet>
		</form>
		</field>
	</record>
	
	<!-- Tree View -->
	<record id="sh_motorcycle_motorcycle_tree" model="ir.ui.view">
		<field name="name">sh_motorcycle_motorcycle</field>
		<field name="model">motorcycle.motorcycle</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="type_id"/>
				<field name="make_id"/>
				<field name="mmodel_id"/>
				<field name="year_id"/>
			</tree>
		</field>
	</record>	
	
	<!-- search view -->
	<record id="sh_motorcycle_motorcycle_search" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.search</field>
		<field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            
             <search string="Motorcycle">
                
                <field name="name" string="Motorcycle" filter_domain="['|','|','|','|',('name','ilike',self),('type_id','ilike',self),('make_id','ilike',self),('mmodel_id','ilike',self),('year_id','ilike',self)]"/>
				<field name="type_id"/>
				<field name="make_id"/>
				<field name="mmodel_id"/>
				<field name="year_id"/>
 
                <group expand="0" string="Group By">
      	              <filter name="group_make_id" string="Make" domain="[]" context="{'group_by':'make_id'}"/>
      	              <filter name="group_type_id" string="Type" domain="[]" context="{'group_by':'type_id'}"/>
      	              <filter name="group_mmodel_id" string="Model" domain="[]" context="{'group_by':'mmodel_id'}"/>
      	              <filter name="group_year_id" string="Year" domain="[]" context="{'group_by':'year_id'}"/>
      	            
                </group>    
            </search>
         </field>
     </record>
	
	<!-- MenuAction -->
	<record id="sh_motorcycle_motorcycle_action" model="ir.actions.act_window">
		<field name="name">Motorcycle</field>
		<field name="res_model">motorcycle.motorcycle</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<!-- Menu Item -->
    <menuitem id="sh_motorcycle_menuitem_sub"
    	sequence="1"
    	name="Motorcycle"
    	parent="sh_motorcycle_menuitem_root"
    	action="sh_motorcycle_motorcycle_action"
    	groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"    
     />	
	
</odoo>